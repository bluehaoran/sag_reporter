var jqDialog = $('#tag-dialog-<%= @impact_report.id %>');
if (jqDialog.hasClass('tag-dialog')) {
    dialog = jqDialog[0];
} else {
    $('#tag-dialog-<%= @impact_report.id %>').replaceWith("<%= j render partial: 'tag_dialog', locals: { impact_report: @impact_report } %>");
    componentHandler.upgradeElement($('#tag-dialog-<%= @impact_report.id %>').find('.mdlext-accordion')[0]);
    componentHandler.upgradeElement($('#tag-dialog-<%= @impact_report.id %>').find('.mdl-checkbox')[0]);
    dialog = $('#tag-dialog-<%= @impact_report.id %>')[0];
    if (! dialog.showModal) {
        dialogPolyfill.registerDialog(dialog);
    }
    $(dialog).find('.submit').on('click', function() {
        $(dialog).find('form').submit();
        dialog.close();
    });
    $(dialog).find('.cancel,.close').on('click', function() {
        dialog.close();
    });
    $(dialog).addClass('registered');
}

dialog.showModal();
<p id="notice"><%= notice %></p>

<h1>Listing Tallies</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tallies.each do |tally| %>
      <tr>
        <td><%= tally.name %></td>
        <td><%= tally.description %></td>
        <td><%= link_to 'Show', tally %></td>
        <td><%= link_to 'Edit', edit_tally_path(tally) %></td>
        <td><%= link_to 'Destroy', tally, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Tally', new_tally_path %>

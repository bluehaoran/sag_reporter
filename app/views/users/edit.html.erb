<% provide(:title, "Edit #{@user.name}'s profile") %>
<h1><i class="material-icons large">create</i> Edit your profile</h1>
<div class="row">
  <%= form_for(@user, html: {class: "col s12"}) do |f| %>
    <%= render 'shared/error_messages', object: f.object %>
    <div class="row">
      <div class="input-field col s8">
        <i class="material-icons prefix">account_circle</i>
        <%= f.text_field :name %>
        <%= f.label :name, class: "active" %>
      </div>
      <div class="input-field col s4">
        <i class="material-icons prefix">phone</i>
        <%= f.text_field :phone %>
        <%= f.label :phone, class: "active" %>
      </div>
    </div>
    <div class="row">
      <div class="input-field col s6">
        <i class="material-icons prefix">vpn_key</i>
        <%= f.password_field :password %>
        <%= f.label :password %>
      </div>
      <div class="input-field col s6">
        <i class="material-icons prefix">vpn_key</i>
        <%= f.password_field :password_confirmation %>
        <%= f.label :password_confirmation, "Confirm Password" %>
      </div>
    </div>
    <%= button_tag( :class => "btn waves-effect waves-light right") do %>
      Update <i class="material-icons right">create</i>
    <% end %>
  <% end %>
</div>
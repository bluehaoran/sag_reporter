<% provide(:title, "Log in") %>
<h1></h1>
<div class="row" >
  <div class="card-panel light-blue otp_msg" style='display:none;'></div>
</div>
<div class="row">
  <%= form_for(:session, url: login_path, html: {class: "col s12", id: "otp_form"}) do |f| %>
    <div class="row">
      <div class="input-field col s12">
        <%= f.text_field :otp_code %>
        <%= f.label :otp, "OTP" %>
      </div>
    </div>
      <%= f.hidden_field :phone, value: @phone %>
      <%= f.hidden_field :password, value: @password %>
      <%= text_field_tag :code, @otp_code %>
      <a href='javascript:;' class='resend_otp'>Resend OTP</a><%= button_tag( :class => "btn waves-effect waves-light right", :id => "btn_login", :type => "button") do %>
        Log in
      <% end %>
  <% end %>
</div>
<div class="row">
  <div id="resend_link">
      
  </div>
</div>
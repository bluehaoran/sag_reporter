<ul class="collapsible" data-collapsible="expandable">
<li>
  <div class="collapsible-header active ">Weekly Tasks</div>
  <div class="collapsible-body">
    <div class="row">

      <% @links.select{ |ld| ld[:category] == 'weekly' }.each do |link_data| %>
        <% if logged_in_user.can? link_data[:permission] %>
          <div class="col s6 m4 l3">
            <%= link_to link_data[:path] do %>
              <div class="card-panel home-link <%= link_data[:colour] %> z-depth-2 center-align">
                <% if link_data[:lcr_icon] %>
                  <i class="lcr-icon <%= link_data[:lcr_icon] %> large black-text"></i>
                <% else %>
                  <i class="material-icons large black-text"><%= link_data[:icon] %></i>
                <% end %>
              </div>
              <div class="center-align black-text"><%= link_data[:text] %></div>
            <% end %>
          </div>
        <% end %>
      <% end %>

    </div>
  </div>
</li>

        View all outcome areas
      <% end %>
    <% end %>

    <% if logged_in_user.is_an_admin? %>
      <%= link_to overview_path, class: "collection-item waves-effect", id: "overview-link" do %>
        <i class="material-icons">pageview</i>
        Overview
      <% end %>
    <% end %>

  </div>
<% end %>

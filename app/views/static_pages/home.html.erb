<% provide(:title, "Home") %>
<h1><i class="material-icons large">home</i> home</h1>

<% if logged_in_user.is_a_reporter? or logged_in_user.is_an_evaluator? %>
  <%= render partial: 'reporter_home' %>
<% else %>
  <div class="collection" id="home-menu">

    <% if logged_in_user.can_create_report? %>
      <%= link_to new_report_path, class: "collection-item waves-effect", id: "field-report-link" do %>
        <i class="material-icons">create</i>
        <%= Translation.get_string('make_report', logged_in_user) %>
      <% end %>
    <% end %>

    <% if logged_in_user.can_create_report? %>
      <%= link_to 'https://docs.google.com/forms/d/1NQHDwomtgh2kVmx1BZRzDuv1lv__SaVzAHfBOH_JlXU/viewform?c=0&w=1', class: "collection-item waves-effect", id: "workshop-report-link" do %>
        <i class="material-icons">create</i>
        Report on a workshop
      <% end %>
    <% end %>

    <% if logged_in_user.can_create_report? %>
      <%= link_to 'https://www.surveymonkey.com/r/R989HM9', class: "collection-item waves-effect", id: "movement-building-report-link" do %>
        <i class="material-icons">create</i>
        Report on movement building
      <% end %>
    <% end %>


    <% if logged_in_user.can_create_event? %>
      <%= link_to events_new_path, class: "collection-item waves-effect", id: "event-report-link" do %>
        <i class="material-icons">event</i>
        <%= Translation.get_string('report_event', logged_in_user) %>
      <% end %>
    <% end %>

      <%= link_to new_mt_resource_path, class: "collection-item waves-effect", id: "new-resource-link" do %>
        <i class="material-icons">build</i>
        Report on a completed resource
      <% end %>


    <% if logged_in_user.can_report_numbers? %>
      <%= link_to report_numbers_path, class: "collection-item waves-effect", id: "numbers-link" do %>
        <i class="material-icons">assessment</i>
        Report numbers for the month
      <% end %>
    <% end %>

  <!--
    <a href="#" class="collection-item waves-effect"><i class="material-icons">dashboard</i>View my reports</a>

    <a href="#" class="collection-item waves-effect"><i class="material-icons">extension</i>View targets and progress</a>
  --> 

    <% if logged_in_user.can_tag_report? %>
      <%= link_to "impact_reports/tag", class: "collection-item waves-effect", id: "tag-link" do %>
        <i class="material-icons">label</i>
        Tag impact reports
      <% end %>
    <% end %>

    <% if logged_in_user.can_evaluate_progress? %>
      <%= link_to select_to_assess_path, class: "collection-item waves-effect", id: "evaluate-link" do %>
        <i class="material-icons">check_circle</i>
        Evaluate progress marker levels
      <% end %>
    <% end %>

    <% if logged_in_user.can_view_output_totals? %>
      <%= link_to outputs_path, class: "collection-item waves-effect", id: "output-totals-link" do %>
        <i class="material-icons">tab</i>
        View output totals
      <% end %>
    <% end %>

    <% if logged_in_user.can_view_outcome_totals? %>
      <%= link_to outcomes_path, class: "collection-item waves-effect", id: "outcome-totals-link" do %>
        <i class="material-icons">tab</i>
        View outcome progress
      <% end %>
    <% end %>

  <!--
    <%= link_to contacts_people_path, class: "collection-item waves-effect", id: "view-contacts-link" do %>

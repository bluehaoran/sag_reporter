<% provide(:title, 'Forgot Password') %>
<% provide(:context_title, 'Forgot Password') %>

  <div class="mdl-card pwd-reset-req-card mdl-shadow--1dp">
      <%= form_for(:password_reset, url: password_resets_path) do |f| %>
        <div class="mdl-textfield mdl-js-textfield">
          <i class="material-icons mdl-textfield__icon">fingerprint</i>
          <%= f.text_field :username, class: 'mdl-textfield__input' %>
          <%= f.label :username, 'Email or Phone number', class: 'mdl-textfield__label' %>
        </div>
      <%= f.submit "Submit", class: "mdl-button submit" %>
      <% end %>
  </div>

<% q_year = {} %>
<% current_q, q_year[current_q] = quarter_for_month(Date.today.month), FinishLineProgress.get_current_year %>
<% last_q = (current_q - 2) % 4 + 1 %>
<% q_year[last_q] = last_q < current_q ? q_year[current_q] : q_year[current_q] - 1 %>
<% church_team.ministries.each do |stream| %>
  <% church_min = ChurchMinistry.find_by(church_team: church_team, ministry: stream) %>
  <div class="team-stream-header">
    <%= stream.name.en %>
    <% if church_min.facilitator.present? %>
      facilitated by <%= church_min.facilitator.name %>
    <% end %>
  </div>
  <table class="team-results mdl-data-table mdl-js-data-table mdl-shadow--2dp">
    <thead>
    <tr>
      <th rowspan="2" class="mdl-data-table__cell--non-numeric">Deliverable</th>
      <% col_count = 8 %>
      <% [last_q, current_q].each do |quarter| %>
        <% months_in_quarter(quarter).each do |month| %>
          <th colspan="2" class="mdl-data-table__cell--non-numeric">
            <% year_month = "#{year_from_app_year(q_year[quarter], month)}-#{month.to_s.rjust(2, '0')}" %>
            <% fac_feedback = church_min.facilitator_feedbacks.find_by_month(year_month) %>
            <% img_html_data = {class: 'approved-stamp'} %>
            <% img_html_data[:hidden] = '' %>
            <%= image_tag 'approved.png', img_html_data %>
            <%= Date::MONTHNAMES[month] %>
            <% if logged_in_user.can_edit_project_stream?(@project, stream) %>
              <button
                id="fac-feedback-button-<%= church_min.id %>-<%= year_month %>"
                class="<%= 'empty' unless fac_feedback and fac_feedback.result_feedback.present? %> sup-feedback-button mdl-button mdl-js-button mdl-button--icon mdl-button--primary"
                data-church-min-id="<%= church_min.id %>"
                data-month="<%= year_month %>"
                data-fac-feedback-id="<%= fac_feedback ? fac_feedback.id : 'new' %>"
                <% if fac_feedback %>
                data-fac-progress="<%= fac_feedback.progress %>"
                <% end %>
                >
                <i class="material-icons">edit</i>
                <div hidden class="sup-feedback"><%= fac_feedback.result_feedback if fac_feedback %></div>
              </button>
              <div class="mdl-tooltip" data-mdl-for="fac-feedback-button-<%= church_min.id %>-<%= year_month %>">
                Facilitator feedback and approval
              </div>
            <% end %>
          </th>
        <% end %>
        <th colspan="2">Quarterly</th>
        <%# column for annual if we have reached the end of app year %>
        <% if quarter == 4 %>
          <th colspan="2">Annual</th>
          <% col_count += 1 %>
        <% end %>
      <% end %>
    </tr>
    <tr>
      <% col_count.times do %>
        <th>Target</th><th>Actual</th>
      <% end %>
    </tr>
    </thead>
    <tbody>
    <% stream.deliverables.church_team.order(:number).each do |deliverable| %>
      <tr>
        <td class="mdl-data-table__cell--non-numeric">
          <span id="deliverable-name-<%= deliverable.id %>"><%= deliverable.short_form.en %></span>
        </td>
        <% [last_q, current_q].each do |quarter| %>
          <% quarterly_actual = 0 %>
          <% months = months_in_quarter(quarter) %>
          <% months_with_year(months.first, months.last, months.first != Date.today.month).each do |year_month| %>
            <% if @outputs[church_min.id][deliverable.id] and @outputs[church_min.id][deliverable.id][year_month] %>
              <% _, target, _ = @outputs[church_min.id][deliverable.id][year_month][false] || [nil, '?', nil] %>
              <% actual_id, actual, variance_reason = @outputs[church_min.id][deliverable.id][year_month][true] || ['', ''] %>
            <% else %>
              <% target, actual_id, actual, variance_reason = '?', '', '', '' %>
            <% end %>
            <% if actual.present? %>
              <% quarterly_actual = deliverable.most_recent? ? actual.to_i : quarterly_actual + actual.to_i %>
            <% end %>
            <td class="mo-target"><%= target %></td>
            <% fac_feedback = church_min.facilitator_feedbacks.find_by_month(year_month) %>
            <td class="mo-actual"
                <%= "data-amo-id=#{actual_id}" if actual.present? %>
                data-church-min="<%= church_min.id %>"
                data-deliverable="<%= deliverable.id %>"
                data-month="<%= year_month %>"
                <% if fac_feedback %>
                data-progress="<%= fac_feedback.progress %>"
                <% end %>
                >
              <%# if logged_in_user.can_edit_project_stream?(@project, stream) %>
              <% if false %>
                <button id="variance-reason-button-<% "#{church_min.id}-#{deliverable.id}-#{year_month}" %>" class="<%= 'empty' unless variance_reason.present? %> amo-info-button mdl-button mdl-js-button mdl-button--icon mdl-button--primary <%= 'hide' unless actual.present? %>">
                  <i class="material-icons">info</i>
                  <div hidden class="variance-reason"><%= variance_reason %></div>
                </button>
                <div class="mdl-tooltip" data-mdl-for="variance-reason-button-<%= "#{church_min.id}-#{deliverable.id}-#{year_month}" %>">
                  Reason for variance
                </div>
                <div class="mdl-textfield mdl-js-textfield amo-actual-input">
                  <input class="mdl-textfield__input"
                         type="text"
                         pattern="[0-9]*(\.[0-9]+)?"
                         name="actual"
                         value="<%= actual %>">
                  <span class="mdl-textfield__error">Enter a number</span>
                </div>
              <% else %>
                <%= actual %>
              <% end %>
            </td>
          <% end %>
          <% q_target = QuarterlyTarget.find_by(state_language: church_team.state_language, deliverable: deliverable, quarter: "#{q_year[quarter]}-#{quarter}") %>
          <td class="quarterly-target"><%= q_target ? q_target.value : '?' %></td>
          <td class="quarterly-actual" data-quarter="<%= quarter %>"><%= quarterly_actual %></td>
          <%# column for annual if we have reached the end of app year %>
          <% if quarter == 4 %>
            <td class="annual-target"><%= calculate_annual_target(year_targets(church_team.state_language, deliverable, q_year[quarter]), deliverable) %></td>
            <td class="annual-actual" data-year="<%= q_year[quarter] %>"><%# calculate_fac_annual_actual(church_team.state_language, deliverable, q_year[quarter]) %></td>
          <% end %>
        <% end %>
      </tr>
      <div class="mdl-tooltip mdl-tooltip--large" data-mdl-for="deliverable-name-<%= deliverable.id %>">
        <%= deliverable.result_form.en %>
      </div>
    <% end %>
    </tbody>
  </table>
<% end %>
<% provide(:title, 'All reports') %>
<h1>All reports</h1>

<div class="row">
  <div class="col s12 m6">
    <%= render partial: "show_archived_switch" %>
  </div>
  <div class="col s12 m6">
    <%= render partial: "selector" %>
  </div>
</div>

<div class="row"><%= will_paginate %></div>

<div class="row">
  <div class="col s12 m6">
    <ul class="reports collection">
      <%= render partial: "report_listing", collection: @reports %>
    </ul>
  </div>
  <div class="col s12 m6">
    
    <ul class="impact_reports collection">
      <%= render partial: "report_listing", collection: @impact_reports %>
    </ul>
    
  </div>
</div>

<div class="row"><%= will_paginate %></div>

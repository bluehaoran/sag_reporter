<% provide(:title, 'Reports grouped by Topic') %>
<h1>Reports grouped by Topic</h1>
<ul class="collapsible" data-collapsible="accordion">
  <% @reports.group_by_collection(@topics, &:topics).each do |topic, top_reports| %>
    <li>
      <div class="collapsible-header <%= colour_class(topic.colour) %>"><%= topic.name %></div>
      <div class="collapsible-body <%= colour_class(topic.colour) %>">
        <% top_reports.in_groups_of(3, false) do |report_group| %>
          <div class="row">
            <%= render partial: "report", collection: report_group, locals: {languages: true, topics: false, wrapper: "col s12 m6 l4"} %>
          </div>
        <% end %>
      </div>
    </li>
  <% end %>
</ul>
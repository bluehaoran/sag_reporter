
    <%= link_to language,
                class: 'filterable-item',
                'data-filter-label': 'translation-status language-family zone',
                'data-translation-status': language.translation_status.to_s,
                'data-language-family': language.family.present? ? language.family.id : 'family-unknown',
                'data-zone': language.geo_states.any? ? language.geo_states.map(&:zone_id).uniq.join(',') : 'zone-unknown'  do %>
      <paper-item class="language-item<%= ' extinct' if language.population == 0 %>">
        <paper-item-body two-line>
          <div>
            <%= language.name %>
            <span id="status_<%= language.id %>" class="secondary-content colour" style="background-color: <%= language.translation_status_colour %>" >&nbsp;</span>
            <paper-tooltip position="left" for="status_<%= language.id %>"><%= language.translation_status.to_s.humanize %></paper-tooltip>
          </div>
          <div secondary>
            <% if language.iso.present? %>
              <span class="iso"><%= language.iso %></span>
            <% end %>
            <% if language.family.present? %>
                <span class="language-family"><%= language.family.name %></span>
            <% end %>
            <% if language.population.present? %>
                <span class="population">population: <%= language.population %></span>
            <% end %>
            <% if language.geo_states.any? %>
              <span class="states">
                spoken in: <%= language.geo_states.map(&:name).to_sentence %>
              </span>
              <span class="zones">
                <%= language.geo_states.map(&:zone_name).uniq.to_sentence %> Zone
              </span>
            <% end %>
          </div>
        </paper-item-body>
      </paper-item>
    <% end %>
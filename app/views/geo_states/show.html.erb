<% provide(:title, 'State Dashboard') %>

<!-- breadcrumbs will go here -->
<!-- India | Zone | current state | previously navigated language -->
<ul class="breadcrumbs">
  <li><%=	 link_to 'India', nation_path %></li>
  <li><%= link_to "#{@geo_state.zone.name} Zone", zone_path(@geo_state.zone) %></li>
  <li><%= link_to @geo_state.name, geo_state_path(@geo_state) %></li>
</ul>

<h1><%= @geo_state.name %></h1>

<div class="mdl-tabs mdl-js-tabs">
  <div class="mdl-tabs__tab-bar">
    <a href="#progress-tab" class="mdl-tabs__tab">Progress</a>
    <a href="#languages-tab" class="mdl-tabs__tab">Languages</a>
    <a href="#organisations-tab" class="mdl-tabs__tab">Organisations</a>
  </div>
  <div class="mdl-tabs__panel is-active" id="progress-tab">
    <%= render 'languages/finish_line_summary', languages: @geo_state.languages %>
  </div>
  <div class="mdl-tabs__panel" id="languages-tab">
    <h3>Languages tracked by LCI</h3>
    <ul class="project-languages mdl-list">
      <%= render partial: 'state_language', collection: @geo_state.state_languages.in_project.includes(language: :family).order('languages.name') %>
    </ul>
    <h3>Other languages</h3>
    <ul class="project-languages mdl-list">
      <%= render partial: 'state_language', collection: @geo_state.state_languages.not_in_project.includes(language: :family).order('languages.name') %>
    </ul>
  </div>
  <div class="mdl-tabs__panel" id="organisations-tab">
    <div class="mdl-grid">
      <% if @geo_state.engaged_organisations.any? %>
        <div class="mdl--4-col">
          <h3>Working here</h3>
          <ul class="mdl-list">
            <%= render partial: 'organisations/organisation', collection: @geo_state.engaged_organisations.uniq %>
          </ul>
        </div>
      <% end %>
      <% if @geo_state.translating_organisations.any? %>
        <div class="mdl--4-col">
          <h3>Translating here</h3>
          <ul class="mdl-list">
            <%= render partial: 'organisations/organisation', collection: @geo_state.translating_organisations.uniq %>
          </ul>
        </div>
      <% end %>
    </div>
  </div>
</div>
<% provide(:title, 'Assess outcome progress by language') %>
<h1>Assess outcome progress by language</h1>

<div id="outcome-area-select">
  <p>First choose an outcome area to assess:</p>
  <%= render @topics %>
</div>

<div style="display: none" id="language-select">
  <p>Now choose a state and language to assess by:</p>
  <ul class="collapsible">
    <% current_user.geo_states.each do |geo_state| %>
      <li>
        <div class="collapsible-header green lighten-2"><%= geo_state.name %></div>
        <div class="collapsible-body collection">
        	<%= render partial: 'topics/language', collection: geo_state.minority_languages.order(:name), locals: {geo_state_id: geo_state.id} %>
        </div>
      </li>
    <% end %>
  </ul>

</div>